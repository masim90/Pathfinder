<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/button_Register"
        android:id="@+id/largeText_RegisterTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mediumText_Name"
        android:id="@+id/mediumText_Name"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/largeText_RegisterTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_Back"
        android:id="@+id/button_BackToLogin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/personName_editName"
        android:layout_below="@+id/mediumText_Name"
        android:layout_alignStart="@+id/mediumText_Name"
        android:layout_alignEnd="@+id/button_BackToLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mediumText_Email"
        android:id="@+id/mediumText_Email"
        android:layout_below="@+id/personName_editName"
        android:layout_alignStart="@+id/personName_editName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/personName_editEmail"
        android:layout_below="@+id/mediumText_Email"
        android:layout_alignEnd="@+id/personName_editName"
        android:layout_alignStart="@+id/mediumText_Email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mediumText_PW"
        android:id="@+id/mediumText_PW"
        android:layout_below="@+id/personName_editEmail"
        android:layout_alignStart="@+id/personName_editEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/personName_editPW1"
        android:layout_below="@+id/mediumText_PW"
        android:layout_alignStart="@+id/mediumText_PW"
        android:layout_alignEnd="@+id/personName_editEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mediumText_RepeatPW"
        android:id="@+id/mediumText_PW2"
        android:layout_below="@+id/personName_editPW1"
        android:layout_alignStart="@+id/personName_editPW1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/personName_editPW2"
        android:layout_below="@+id/mediumText_PW2"
        android:layout_alignStart="@+id/mediumText_PW2"
        android:layout_alignEnd="@+id/personName_editPW1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_Register"
        android:id="@+id/button_register"
        android:layout_below="@+id/personName_editPW2"
        android:layout_alignStart="@+id/largeText_RegisterTitle"
        android:layout_marginTop="29dp"
        android:onClick="onClickRegister" />

</RelativeLayout>